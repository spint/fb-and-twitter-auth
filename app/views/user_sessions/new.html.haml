%h1 Login

- form_for @user_session, :url => login_url do |f|
  = f.error_messages
  %p
    = f.label :login
    %br
    = f.text_field :login
  %p
    = f.label :password
    %br
    = f.password_field :password
  %p
    = f.submit "Login"

  %p
    = oauth_register_button :value => "Register with Twitter"
    = oauth_login_button :value => "Login with Twitter"

