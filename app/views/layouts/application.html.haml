!!!
%html(xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://www.facebook.com/2008/fbml")

%head
  %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
  %title
    = "#{controller.controller_name} : #{controller.action_name}"
  = #stylesheet_link_tag 'scaffold'
  = javascript_include_tag :defaults

  %script{:src => "http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php", :type => "text/javascript"}

%body
  %h1 Authlogic Example App
  = pluralize User.logged_in.count, "user" 
  currently logged in
  %br
  %br
 
- if !current_user
  = link_to "Register", new_account_path  
  |
  = link_to "Log In", new_user_session_path
  |
- else
  = link_to "My Account", account_path
  |
  = link_to "Logout", {:controller => :user_sessions, :action => :destroy}, :method => :delete, :confirm => "Are you sure you want to logout?"
  |
  = link_to "Delete Account", account_path, :method => :delete
%p{:style => "color: green;"}
  = flash[:notice]


= fb_connect_javascript_tag
= init_fb_connect "XFBML"

= yield
