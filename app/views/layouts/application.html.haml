%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}

%head
  %meta(http-equiv="content-type" content="text/html;charset=UTF-8")
  %title
    = "#{controller.controller_name} : #{controller.action_name}"
  = #stylesheet_link_tag 'scaffold'
  = javascript_include_tag :defaults

%body
  %h1 Authlogic Example App
  = pluralize User.logged_in.count, "user" 
  currently logged in
  %br
  %br
  = @test
 
- if !current_user
  = link_to "Register", new_account_path  
  |
  = link_to "Log In", new_user_session_path
  |
- else
  = link_to "My Account", account_path(current_user)
  |
  = link_to "Logout", {:controller => :user_sessions, :action => :destroy}, :method => :delete, :confirm => "Are you sure you want to logout?"
 
%p{:style => "color: green;"}
  = flash[:notice]

= yield